{
  "name": "swanky-cli",
  "version": "0.0.0-semantically-released",
  "preferGlobal": true,
  "description": "A simple CLI for scaffolding Swanky Docs projects.",
  "author": "Rod Leviton",
  "license": "MIT",
  "keywords": [
    "swanky",
    "docs",
    "cli"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/release/commit-message-config.js"
    },
    "ghooks": {
      "pre-commit": "npm run exact-semver",
      "commit-msg": "./node_modules/cz-customizable-ghooks/lib/index.js $2",
      "pre-push": "npm-run-all verify test:coverage --silent"
    }
  },
  "bin": {
    "swanky": "bin/swanky",
    "swanky-init": "bin/swanky-init"
  },
  "dependencies": {
    "async": "2.1.2",
    "chalk": "1.1.3",
    "clear": "0.0.1",
    "command-exists": "1.0.2",
    "commander": "2.9.0",
    "cross-spawn": "4.0.2",
    "deep-extend": "0.4.1",
    "download-git-repo": "0.2.1",
    "fs-extra": "1.0.0",
    "inquirer": "1.2.2",
    "lodash": "4.16.4",
    "mem-fs": "1.1.3",
    "mem-fs-editor": "2.3.0",
    "mkdirp": "0.5.1",
    "ora": "0.3.0",
    "os": "0.1.1",
    "request": "^2.78.0",
    "rimraf": "2.5.4",
    "semver": "^5.3.0",
    "uid": "0.0.2"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chokidar-cli": "1.2.0",
    "codecov.io": "0.1.6",
    "cz-conventional-changelog": "1.2.0",
    "cz-customizable": "4.0.0",
    "cz-customizable-ghooks": "1.3.0",
    "eslint": "3.9.0",
    "eslint-config-kentcdodds": "10.1.0",
    "eslint-formatter-pretty": "1.1.0",
    "exact-semver": "1.2.0",
    "ghooks": "1.3.2",
    "istanbul": "0.4.5",
    "mocha": "3.1.2",
    "npm-run-all": "3.1.1",
    "semantic-release": "4.3.5"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swanky-docs/swanky-cli.git"
  },
  "scripts": {
    "commit": "git-cz",
    "exact-semver": "exact-semver",
    "pre-release": "npm-run-all verify test:coverage",
    "report-coverage": "cat ./reports/coverage.json | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm-run-all test:unit:clean test:unit",
    "test:check-coverage": "istanbul check-coverage reports/coverage.json --config config/test/istanbul.yml",
    "test:coverage": "npm-run-all test:unit:once test:check-coverage --silent",
    "test:unit": "NODE_ENV=test mocha --opts config/test/mocha.opts",
    "test:unit:clean": "rimraf test/unit/mock-builds",
    "test:unit:once": "npm-run-all test:unit:clean && NODE_ENV=test istanbul cover --config config/test/istanbul.yml _mocha -- --opts config/test/mocha.opts",
    "verify": "npm run verify:js --silent",
    "verify:js": "eslint -c config/verify/.eslintrc -f node_modules/eslint-formatter-pretty .; exit 0",
    "verify:js:watch": "chokidar 'bin/**/*.js' 'src/**/*.js' 'test/**/*.js' 'config/**/*.js' -c 'npm run verify:js' --initial --silent",
    "verify:watch": "npm run verify:js:watch"
  }
}
