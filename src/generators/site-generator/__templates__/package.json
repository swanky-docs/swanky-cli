{
  "name": "<%= nameNormalized %>",
  "author": "<%= author %>",
  "description": "<%= name %> Documentation",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development node <%= src %>/config/start/serve.dev.js",
    "prebuild": "rimraf <%= output %>/",
    "build": "npm run build:prod",
    "build:serve": "npm-run-all build serve:prod",
    "build:prod": "NODE_ENV=production webpack -p --progress --config <%= src %>/config/build/build.prod.js --profile --colors",
    "serve:prod": "http-server <%= output %> -o"
  },
  "dependencies": {
    "prismjs": "1.6.0"
  },
  "devDependencies": {
    "http-server": "0.9.0",
    "npm-run-all": "3.1.2",
    "rimraf": "2.5.4",
    "swanky": "2.0.2",
    "webpack": "^2.2.0-rc"
  }
}