.snippet-template
  width: 200px
  height: auto
  display inline-block
  margin 0 1.5rem 3.5rem 0
  text-align: center
  font-size 1rem
  line-height: 1em
  text-transform: uppercase

  .snippet-template-icon
    width: 200px
    height: 200px
    border-radius 10px
    overflow hidden
    background url('./images/snippet-template.svg') no-repeat top center
    background-size @width @height
    margin: 0 auto 10px auto
